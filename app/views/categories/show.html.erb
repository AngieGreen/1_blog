<% provide(:title, @category.name) %>

    <!-- Page Content -->

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <% if @category.posts.any? %>
                <h1 class="page-header"><%= @category.name %></h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Projects -->
        <div class="row">
            <div class="col-md-7">
                <ol>
                    <%= link_to @posts.image, posts_path %>
            </div>
            <div class="col-md-5">
                    <h3><%= @posts.title %></h3>
                    <p><%= render @posts.content %></p>
                    <span class="btn btn-primary"><%= link_to "More", posts_path %></span>
                </ol>
            </div>
        </div>

        <%= will_paginate @posts %>
        <% end %>
        <!-- /.row -->