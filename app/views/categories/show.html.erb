<% provide(:title, @category.name) %>

    <!-- Page Content -->

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <% @category.each do |project| %>
                <h1 class="page-header"><%= project.name %></h1>
                <% end %>
            </div>
        </div>
        <!-- /.row -->

        <!-- Projects in that Category-->
        <div class="row">
            <div class="col-md-7">
                <ol>
                    <% @posts.each do |eachpost| %>
                    <%= link_to eachpost.title %>
            </div>
            <div class="col-md-5">
                    <h3><%= eachpost.title %></h3>
                    <p><%= eachpost.content %></p>
                    <span class="btn btn-primary"><%= link_to "More", posts_path %></span>
                    <% end %>
                </ol>
            </div>
        </div>
        <!-- /.row -->